<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_initial_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Initial amount"
        android:inputType="text" />
    <EditText
        android:id="@+id/edit_conversion_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Conversion rate"
        android:inputType="text" />
    <EditText
        android:id="@+id/edit_conversion_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Conversion From"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_conversion_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Conversion To"
        android:inputType="text" />
    <EditText
        android:id="@+id/edit_conversion_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Conversion Amount"
        android:inputType="text" />


</LinearLayout>
